@model ArizaBildirimProject.Models.Cihaz

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cihaz</h4>
<hr />
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="BolumId" class="control-label">Bölüm</label>
        <select asp-for="BolumId" class="form-control" id="BolumId">
            <option value="">-- Seçiniz --</option>
            @foreach (var item in (IEnumerable<Bolum>)ViewBag.Bolums)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        <span asp-validation-for="BolumId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Cihaz</label>
        <input type="text" asp-for="Name" class="form-control" id="BolumName" placeholder="Cihaz adını girin" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
