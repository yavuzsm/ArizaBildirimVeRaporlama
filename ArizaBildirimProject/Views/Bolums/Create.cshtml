@model ArizaBildirimProject.Models.Bolum

@{
    ViewData["Title"] = "Create";
}

<h1>Yeni Bölüm Oluştur</h1>

<hr />
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DepartmentId" class="control-label">Departman</label>
        <select asp-for="DepartmentId" class="form-control" id="DepartmentId">
            <option value="">-- Seçiniz --</option>
            @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Departments)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Bölüm</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Bölüm adını girin" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
